@model PagedList.IPagedList<group19Web.Models.tbl_saleorder_products>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "MainAdmin";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">

        <div class="container-fluid"
             <div class="row">
                 <div class="col-lg-6">
                     <form action="/tbl_saleorder_products/Search" method="post">
                         <div class="input-group rounded">
                             <input type="search" name="searchText" class="form-control rounded" placeholder="Tìm kiếm" aria-label="Search"
                                    aria-describedby="search-addon" />
                             <span class="input-group-text border-0" id="search-addon">
                                 <i class="fas fa-search"></i>
                             </span>
                         </div>
                     </form>
                 </div>
        </div>
        <br/>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Ngày tạo</th>
                                    <th>Ngày cập nhật</th>
                                    <th>Mã đơn hàng</th>
                                    <th>Tên sản phẩm</th>
                                    <th class="text-right">Giá mặt hàng</th>
                                    <th class="text-right">Số lượng</th>
                                    <th class="text-right">Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.created_date</td>
                                        <td>@item.updated_date</td>
                                        <td>@item.tbl_product.title</td>
                                        <td class="text-right">@item.tbl_product.price</td>
                                        <td class="text-right">@item.quantity</td>
                                        <td class="text-right">@item.tbl_saleorder.total</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("MainAdmin", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT -->
