
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="clear h30 destop"></div>

<div class="container">
    <div class="text-center bg1 box" style="margin-bottom: 15px">
        <h1 class="font30">
            <i class="i-hand"></i><span class="full text-center pb-3">Web cây cảnh</span>
        </h1>

        <div class="clearfix h20"></div>

        <div class="d-inline text-center cl_xanh6 font20 tieuchi-3">
            <span class="">Bán cây cảnh</span><span class="">Chăm sóc cây</span><span class="">Tư vấn thiết kế</span>
        </div>
    </div>

    <div class="text-center box box-prod">
        <h2 class="tit-box cl_xanh6">cây cảnh mới</h2>

        <div class="clearfix"></div>

        <div class="owl-carousel owl-theme owl-4-items"
             style="max-height: 500px; overflow-y: hidden">
            @foreach (var item in ViewBag.productTop8)
            {
                <div class="">
                    <div class="wrap-item-loop-sp bg_white">
                        <div class="item-loop-sp mb-4">
                            <div class="img1 photo overhiden marb10">
                                <a href="/Client/detail?id=@item.id"
                                   title="Cây Mini Monstera">
                                    <img src="~/UploadFile/productImage/@item.avatar"
                                         class="w100 transition wp-post-image"
                                         alt="@item.title"
                                         loading="lazy"
                                         srcset="
                          ~/UploadFile/productImage/@item.avatar 255w,
                          ~/UploadFile/productImage/@item.avatar 400w,
                         ~/UploadFile/productImage/@item.avatar 150w,
                          ~/UploadFile/productImage/@item.avatar 768w,
                          ~/UploadFile/productImage/@item.avatar    83w,
                          ~/UploadFile/productImage/@item.avatar        800w
                        "
                                         sizes="(max-width: 255px) 100vw, 255px" />
                                </a>
                            </div>
                            <div class="transition w100 wr1 text-center">
                                <a href="/Client/detail?id=@item.id"
                                   title="Cây Mini Monstera"><h3 class="clear tit-loop-sp">@item.title</h3></a>
                                <span class="price font18 text-danger">@item.price <ins>₫</ins></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="text-center box box-tax">
        <h2 class="tit-box cl_xanh6">danh mục cây cảnh</h2>

        <div class="clearfix"></div>

        <div class="row">
            @foreach(var item in ViewBag.categories)
            {
            <div class="col-12 col-sm-6 col-lg-3 text-center transition marb30">
                <a class="item-hover-1 relative transition"
                   href="/Client/DetailCategory?id=@item.id"
                   title="@item.name">
                    <div class="hover">
                        <h2 class="
                      h2-tax
                      text-center text-uppercase
                      cl_white
                      font18
                      w100
                    ">
                            @item.name
                        </h2>

                        <img class="w100"
                             src="~/UploadFile/categoryImage/@item.avatar"
                             alt="@item.name" />

                        <div class="overlay">
                            <div class="w100">
                                <span class="text-uppercase transition">Chi tiết</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            }
        </div>
    </div>
</div>
